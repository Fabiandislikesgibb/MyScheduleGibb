<!-- MauiApp3/Resources/Styles/Styles.xaml -->
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PrimaryBlue">#3A75C4</Color>
    <Color x:Key="SoftGray">#F2F2F2</Color>
    <Color x:Key="AccentGreen">#4CAF50</Color>
    <Color x:Key="WarningOrange">#FF9800</Color>
    <Color x:Key="HighlightRed">#E53935</Color>

    <Style x:Key="SelectedToolbarItemStyle" TargetType="ToolbarItem">
        <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}" />
    </Style>

    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource SoftGray}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}" />
        <Setter Property="TextColor" Value="White" />
    </Style>
</ResourceDictionary>