<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:mauiApp3="using:MauiApp3"
       x:Class="MauiApp3.AppShell">

    <FlyoutItem Title="Calendar" Icon="icon_calendar.png">
        <ShellContent>
            <NavigationPage>
                <x:Arguments>
                    <mauiApp3:CalendarPage />
                </x:Arguments>
            </NavigationPage>
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Info" Icon="info.png">
        <ShellContent ContentTemplate="{DataTemplate mauiApp3:InfoPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Help" Icon="help.png">
        <ShellContent ContentTemplate="{DataTemplate mauiApp3:HelpPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Input" Icon="input.png">
        <ShellContent ContentTemplate="{DataTemplate mauiApp3:InputPage}" />
    </FlyoutItem>
</Shell>