<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.InfoPage"
             Title="Info">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Frame BackgroundColor="Transparent" BorderColor="Transparent" HasShadow="False">
                <StackLayout>
                    <Label Text="1. Willkommen" Style="{StaticResource HeaderLabel}" TextColor="{StaticResource PrimaryBlue}" />
                    <Label Text="Herzlich willkommen! Unsere Plattform unterstützt Sie dabei, effizienter zu arbeiten und Ihre Ziele zu erreichen." Style="{StaticResource ContentLabel}" TextColor="White" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="Transparent" HasShadow="False">
                <StackLayout>
                    <Label Text="2. Unsere Mission" Style="{StaticResource HeaderLabel}" TextColor="{StaticResource PrimaryBlue}" />
                    <Label Text="Wir glauben an klare Prozesse und smarte Tools, um Zeit zu sparen und Produktivität zu steigern." Style="{StaticResource ContentLabel}" TextColor="White" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="Transparent" HasShadow="False">
                <StackLayout>
                    <Label Text="3. Funktionen" Style="{StaticResource HeaderLabel}" TextColor="{StaticResource PrimaryBlue}" />
                    <Label Text="Intuitiv: Einfache Bedienung ohne Einarbeitungszeit." Style="{StaticResource ContentLabel}" TextColor="White" />
                    <Label Text="Flexibel: Anpassbar an Ihre Bedürfnisse." Style="{StaticResource ContentLabel}" TextColor="White" />
                    <Label Text="Effizient: Automatisierungen, die Arbeit erleichtern." Style="{StaticResource ContentLabel}" TextColor="White" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="Transparent" HasShadow="False">
                <StackLayout>
                    <Label Text="4. Warum wir?" Style="{StaticResource HeaderLabel}" TextColor="{StaticResource PrimaryBlue}" />
                    <Label Text="Mit Leidenschaft für Design und Technik entwickeln wir Lösungen, die Ihnen den Alltag erleichtern." Style="{StaticResource ContentLabel}" TextColor="White" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="Transparent" HasShadow="False">
                <StackLayout>
                    <Label Text="5. Kontakt" Style="{StaticResource HeaderLabel}" TextColor="{StaticResource PrimaryBlue}" />
                    <Label Text="Fragen oder Feedback? Schreiben Sie uns: info@unsereplattform.de" Style="{StaticResource ContentLabel}" TextColor="White" />
                </StackLayout>
            </Frame>

            <Image Source="logo.png" HorizontalOptions="Center" Margin="20" />
        </StackLayout>
    </ScrollView>
</ContentPage>