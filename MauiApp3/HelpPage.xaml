<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.HelpPage"
             Title="Hilfe">

    <CollectionView x:Name="FaqCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding Question}" FontSize="Medium" />
                    <Label Text="{Binding Answer}" FontSize="Small" IsVisible="{Binding IsVisible}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>