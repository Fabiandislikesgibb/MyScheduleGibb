<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.CalendarPage"
             Title="Kalender">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Tag" Clicked="OnDayViewClicked" />
        <ToolbarItem Text="Monat" Clicked="OnMonthViewClicked" />
        <ToolbarItem Text="Jahr" Clicked="OnYearViewClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <DatePicker x:Name="CalendarDatePicker" DateSelected="OnDateSelected" />
        <ContentView x:Name="CalendarContentView" />
    </StackLayout>
</ContentPage>