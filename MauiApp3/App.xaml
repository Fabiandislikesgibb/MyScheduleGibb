<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.App">
    <Application.Resources>
        <Color x:Key="PrimaryBlue">#3A75C4</Color>
        <Color x:Key="SoftGray">#F2F2F2</Color>
        <Color x:Key="AccentGreen">#4CAF50</Color>
        <Color x:Key="WarningOrange">#FF9800</Color>
        <Color x:Key="HighlightRed">#E53935</Color>

        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Roboto-Medium" />
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}" />
        </Style>

        <Style x:Key="ContentLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="OpenSans-Regular" />
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="TextColor" Value="Black" />
        </Style>

        <Style x:Key="BoldContentLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="OpenSans-Bold" />
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="TextColor" Value="Black" />
        </Style>

        <Style x:Key="AccentLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Raleway-Italic" />
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="TextColor" Value="Black" />
        </Style>

        <Style x:Key="FrameStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="{StaticResource SoftGray}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="15" />
        </Style>
    </Application.Resources>
</Application>